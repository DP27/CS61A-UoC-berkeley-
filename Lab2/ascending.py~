def is_asc(n):
    if n<10:
        print("True")
        return
    elif n>10:
        a=0
        ori=n
        while(n):
            n=n//10
            a+=1
            continue
        temp=0
        print(a)
        for i in range(1,a+1):
            r2=ori%10
            ori=ori//pow(10,i)
            if temp<=r2:
                temp=r2
                if ori==0:
                    print("True")
                    return
                else:
                    i=i+1
            elif r2<temp:
                print("False")
                return
               
                   
                    
                

            
            
        
        
    
        
        
    
        
